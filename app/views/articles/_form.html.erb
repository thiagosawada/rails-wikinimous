<%= form_for(@article)  do |f| %>
  <div class="form-group">
    <%= f.label :title, "Title:" %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :content, "Content:" %>
    <%= f.text_area :content, rows: '3', class: 'form-control' %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
